import sys
import shutil
import argparse
import subprocess
from xboomx.config import config
from xboomx.sqlitemgr import get_session, PathItem


def print_stats():
    """
    Display statistics about the application launches
    """
    session = get_session()
    items = session.query(PathItem).order_by(PathItem.count.desc())

    print('Application\tLaunches')
    for item in items:
        if len(item.name) < 8:
            print(f'{item.name}\t\t{item.count}')
        else:
            print(f'{item.name}\t{item.count}')


def main():
    parser = argparse.ArgumentParser(description='Run dmenu with entries sorted by usage frequency.')
    parser.add_argument('--stats', action='store_true', help='Display application launch statistics.')

    args = parser.parse_args()

    if args.stats:
        print_stats()
        exit(0)

    dmenu_config = config.get("dmenu_params", "")
    dmenu_config = dmenu_config.split(' ')
    dmenu_launcher = 'dmenu'

    xboomx_sort = [shutil.which('xboomx_sort.py')] #['python', 'xboomx_sort.py']
    dmenu_launcher = [dmenu_launcher]
    dmenu_launcher.extend(dmenu_config)
    xboomx_update = [shutil.which('xboomx_update.py')] # ['python', 'xboomx_update.py']

    process = subprocess.Popen(xboomx_sort, stdout=subprocess.PIPE)
    process2 = subprocess.Popen(dmenu_launcher, stdin=process.stdout, stdout=subprocess.PIPE)
    process3 = subprocess.Popen(xboomx_update, stdin=process2.stdout, stdout=subprocess.PIPE)

    command = process3.stdout.readline().decode().strip()
    subprocess.run(['sh', '-c', f'exec {command} &'])


if __name__ == '__main__':
    main()
